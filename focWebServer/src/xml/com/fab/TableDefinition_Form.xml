        <VerticalLayout>
            <GuiField name="NAME" caption="Name" captionPos="left" width="250px" height="-1px"
                captionWidth="110px" />
            <GuiField name="TITLE" caption="Title" captionPos="left" captionWidth="110px"
                width="250px" height="" />
