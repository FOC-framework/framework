      <TableColumn name="NAME" caption="Name" />
      <TableColumn name="DB_RESIDENT" caption="Database Resident" />
      <TableColumn name="TITLE" caption="Title" />
      <TableColumn name="PREDEFINED_FIELD" caption="Predefined Field" />
      <TableColumn name="SQL_TYPE" caption="SQL Type" />
      <TableColumn name="IS_KEY" caption="Is key" />
      <TableColumn name="LENGTH" caption="Length" />
      <TableColumn name="DCIMALS" caption="Decimals" />
      <TableColumn name="WITH_INHERITANCE" caption="Inherit" />
      <TableColumn name="DEFAULT_VALUE" caption="Default Value" />
      <TableColumn name="FATHER_NODE" caption="Header Table" />
    </GuiTable>
  </VerticalLayout>
  
</VerticalLayout>


