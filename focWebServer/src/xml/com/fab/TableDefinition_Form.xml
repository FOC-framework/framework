    </HorizontalLayout>
  </VerticalLayout>

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="tableContainer">
    <GuiTable title="FIELDS" name="FIELD_DEFINITION_LIST" dataPath="FIELD_DEFINITION_LIST" width="100%" height="100%" checkBox="true" duplicateEnabled="true">
      <OpenForm containerWindow="same window" />
