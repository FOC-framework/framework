<VerticalLayout margin="true" width="100%" spacing="true">
  <ValidationSettings withApply="true" withSave="false" withAttach="true" withPrint="false" />

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="container">
    <Label value="Company Info" style="black,bold,f16" />
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="CODE" caption="Code" width="180px" />
      <GuiField name="NAME" caption="Name" width="180px" />
      <GuiField name="EXTERNAL_CODE" caption="External Code" width="180px" immediate="true" />
      <GuiField name="MOF_REG_NO" caption="MoF No." width="180px" />
      <GuiField name="INDUSTRY" caption="Industry" width="180px" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="INTRODUCTION" caption="Introduction" width="372px" />
      <GuiField name="COMMENT" caption="Comment" width="564px" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="PHONE1" caption="Phone 1" width="180px" />
      <GuiField name="EXTENTION1" caption="Ext. 1" width="180px" />
      <GuiField name="PHONE2" caption="Phone 2" width="180px" />
      <GuiField name="EXTENTION2" caption="Ext. 2" width="180px" />
      <GuiField name="MOBILE" caption="Mobile" width="180px" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="PO_BOX" caption="P.O.Box" width="180px" />
      <GuiField name="FAX" caption="Fax" width="180px" />
      <GuiField name="EMAIL" caption="Email" width="180px" />
      <GuiField name="WEB" caption="Web" width="372px" />
    </HorizontalLayout>
  </VerticalLayout>

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="container">
    <Label value="Main Contact" style="black,bold,f16" />
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="DEFAULT_CONTACT.TITLE" caption="Title" width="180px" />
      <GuiField name="DEFAULT_CONTACT.FIRST_NAME" caption="First Name" width="180px" />
      <GuiField name="DEFAULT_CONTACT.FAMILY_NAME" caption="Family Name" width="180px" />
      <GuiField name="DEFAULT_CONTACT.POSITION_DESC" caption="Position" width="180px" />
      <GuiField name="DEFAULT_CONTACT.INTRODUCTION" caption="Introduction" width="180px" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="DEFAULT_CONTACT.MOBILE" caption="Mobile" width="180px" />
      <GuiField name="DEFAULT_CONTACT.PHONE1" caption="Phone (Primary)" width="180px" />
      <GuiField name="DEFAULT_CONTACT.PHONE2" caption="Phone (Secondary)" width="180px" />
      <GuiField name="DEFAULT_CONTACT.EMAIL" caption="Email (Primary)" width="180px" />
      <GuiField name="DEFAULT_CONTACT.EMAIL2" caption="Email (Secondary)" width="180px" />
    </HorizontalLayout>
  </VerticalLayout>

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="tableContainer">
    <GuiTable title="CONTACTS" name="_CONTACTS" dataPath="DATASTORE[ADR_BK_CONTACT]" width="100%" pageLength="fit">
      <TableColumn name="TITLE" caption="Title" />
      <TableColumn name="FULL_NAME" caption="Full Name" link="true" />
      <TableColumn name="POSITION_DESC" caption="Position" />
      <TableColumn name="MOBILE" caption="Mobile" />
      <TableColumn name="PHONE1" caption="Phone" />
      <TableColumn name="EMAIL" caption="Email" />
      <TableColumn name="INTRODUCTION" caption="Introduction" />
      <TableColumn name="SET_DEFAULT_CONTACT" caption="Set as Default" />
      <TableColumn name="USER_MANAGEMENT" caption="User Management" />
    </GuiTable>
  </VerticalLayout>

  <VerticalLayout captionMargin="0" margin="true" spacing="true" style="container">
    <Label value="Addresses" style="black,bold,f16" />
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="COUNTRY" caption="Country" width="180px" />      
      <GuiField name="CITY" caption="City" width="180px" />
      <GuiField name="REGION" caption="Region" width="180px" />
      <GuiField name="LANGUAGE" caption="Language" width="180px" />
      <GuiField name="COMPANY" caption="Company" width="180px" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="INVOICING_ADDRESS" caption="Invoicing Address" width="942px" height="90px" textArea="true" />
    </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="DIFFERENT_ADDRESSES" caption="Delivery Address Different From Invoicing Addresses"/>
      </HorizontalLayout>
    <HorizontalLayout captionMargin="0" margin="true" spacing="true">
      <GuiField name="DELIVERY_ADDRESS" caption="Delivery Address" width="942px" height="90px" textArea="true" />
    </HorizontalLayout>
  </VerticalLayout>

</VerticalLayout>