	<VerticalLayout name="_WFConsoleButtonsLayout" captionMargin="0" margin="false" spacing="true" width="200px" height="100%">
	  <Button name="SEND_COMMENT" caption="وضع الملاحظة" icon="send" description="Comment only" border="false" style="f17,bold,text-white" width="100%"/>
